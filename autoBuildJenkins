pipeline {
    agent any
    tools {
        maven "MAVEN"
    }
    environment {
     JENKINS_NODE_COOKIE = 'dontKillMe /usr/apache/bin/httpd'
    }
    stages {
    
   
    
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }
        stage('Build') {
            steps {
                dir("/var/lib/jenkins/workspace/Test") {
                sh 'mvn -B -DskipTests clean package'
                }
            }
        }
        
       stage("Deployment") {
      		steps {
      			
      			sh 'chmod +x ./mvnw'
      		    sh 'java -Dhudson.util.ProcessTree.disable=true -jar /var/lib/jenkins/workspace/Test/target/baseRestApi-0.0.1-SNAPSHOT.jar &'
      			
    		}
    	}


     }
    post {
       always {
          junit(
	        allowEmptyResults: true,
	        testResults: '*/test-reports/.xml'
      		)
      }
      
  
   } 
}