pipeline {
    agent any
    tools {
        maven "MAVEN"
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }
        stage('Build') {
            steps {
                dir("/var/lib/jenkins/workspace/baseRestApi") {
                sh 'mvn -B -DskipTests clean package'
                }
            }
        }
        
        stage("Deployment") {
     	 sh java -jar "/var/lib/jenkins/workspace/baseRestApi/target/baseRestApi-0.0.1-SNAPSHOT.jar"
   	 	}
     }
    post {
       always {
          junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
      )
      }
   } 
}